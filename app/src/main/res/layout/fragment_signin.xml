<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/sign_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/text_padding"
        android:paddingTop="@dimen/large_margin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign In"
                    android:textSize="25sp"
                    android:textColor="@color/mainWhite"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="2px"
                    android:textSize="25sp"
                    android:background="@drawable/line"
                    android:textColor="@color/mainWhite"
                    android:layout_marginTop="@dimen/small_margin"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/middle_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="or"
                    android:textSize="20sp"
                    android:textColor="#918d8d"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="2px"
                    android:textColor="@color/mainWhite"
                    android:layout_marginTop="@dimen/small_margin"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/middle_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textSize="20sp"
                    android:textColor="#918d8d"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="2px"
                    android:textSize="20sp"
                    android:textColor="@color/mainWhite"
                    android:layout_marginTop="@dimen/small_margin"/>

            </LinearLayout>

        </LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_margin"
            android:textColorHint="@color/mainHint"
            app:hintTextAppearance="@style/TextInputAppTheme">

            <EditText
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:hint="Phone Number"
                android:textColorHint="@color/mainHint"
                android:textSize="@dimen/medium_text"
                android:textColor="@color/mainBlue"
                android:singleLine="true"
                android:theme="@style/MyEditText"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_margin"
            android:textColorHint="@color/mainHint"
            app:hintTextAppearance="@style/TextInputAppTheme">

            <EditText
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Password"
                android:textColorHint="@color/mainHint"
                android:textSize="@dimen/medium_text"
                android:textColor="@color/mainBlue"
                android:singleLine="true"
                android:theme="@style/MyEditText"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_margin"
            android:gravity="center"
            android:background="@drawable/signin_bg_btn_chosen"
            android:text="Sign   In"
            android:textSize="@dimen/medium_text"
            android:paddingLeft="@dimen/text_padding"
            android:paddingRight="@dimen/text_padding"
            android:textColor="@color/mainWhite"
            android:textAllCaps="false"/>

    </LinearLayout>

</RelativeLayout>